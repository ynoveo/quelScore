<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="QuickStartApplication.controller.Pronostics">
	<App>
		<pages>
			<Page
				id="idPage"
				title=""
				showNavButton="true"
				navButtonPress="onNavBack">
				<content>
					<Carousel class="sapUiResponsiveContentPadding" loop="true" pageIndicatorPlacement="Top">
						<ScrollContainer height="100%" width="100%"
							horizontal="false" vertical="true">
							<VBox
								id="idVBox">
								<items>
									<FacetFilter
										id="idFacetFilter"
										type="Light"
										showPersonalization="true"
										showReset="true"
										reset="handleFacetFilterReset"
										lists="{global>/Filters}">
										<lists>
											<FacetFilterList
												title="{global>type}"
												key="{global>key}"
												multiselect="true"
												listClose="handleListClose"
												items="{global>values}" >
												<items>
													<FacetFilterItem
														text="{global>data}"/>
												</items>
											</FacetFilterList>
										</lists>
									</FacetFilter>
				        			<Table
				        				id="matchTable"
				        				items="{
											path: 'remote>/match',
											filters: [
											{path: 'matchfini', operator: 'EQ', value1: 'N'},
											{path: 'encours', operator: 'EQ', value1: 'N'}
											],
											sorter: {
												path: 'remote>sortdate',
												descending: false,
												group: '.getGroup'
											},
											groupHeaderFactory: '.getGroupHeader'
										}"
										noDataText="Aucun match"
										headerText="Matchs à venir"
				        				width="100%"
				        				hAlign="Center">
										<columns>
											<Column width="{remote>/flagsize}" hAlign="Left" vAlign="Center"/>
											<Column width="{remote>/teamsize}" hAlign="Right"/>
											<Column width="18%" hAlign="Center"/>
											<Column width="{remote>/teamsize}" hAlign="Left"/>
											<Column width="{remote>/flagsize}" hAlign="Left"/>
											<Column demandPopin="true" minScreenWidth="9999px"/>
										</columns>
										<items>
											<ColumnListItem selected="true" type="Active" press="openPopup">
												<cells>
													<Image src="./flag/{remote>flagA}" width="100%"/>
													<ObjectIdentifier id="equipeA" title="{remote>txtequipeA}" text="Mon score" wrapping="false"/>
													<ObjectIdentifier
														id="scores"
														title="{parts: [
													                {path: 'remote>encours' },
													                {path: 'remote>matchfini' },
													                {path: 'remote>scoreA' },
													                {path: 'remote>scoreB' },
													                {path: 'remote>heurematch' }
													            ],
													            formatter: '.heureOuScore'}"
														text="{remote>pronoA} - {remote>pronoB}"/>
													<ObjectIdentifier id="equipeB" title="{remote>txtequipeB}" text="{remote>points}" />
													<Image src="./flag/{remote>flagB}" width="100%"/>
													<Text text="{remote>commentaire}" />
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</items>
							</VBox>
						</ScrollContainer>
						<ScrollContainer height="100%" width="100%"
							horizontal="false" vertical="true">
							<VBox
								id="idVBox2">
								<items>
									<FacetFilter
										id="idFacetFilter2"
										type="Light"
										showPersonalization="true"
										showReset="true"
										reset="handleFacetFilterReset"
										lists="{global>/Filters}">
										<lists>
											<FacetFilterList
												title="{global>type}"
												key="{global>key}"
												multiselect="true"
												listClose="handleListClose"
												items="{global>values}" >
												<items>
													<FacetFilterItem
														text="{global>data}"/>
												</items>
											</FacetFilterList>
										</lists>
									</FacetFilter>
									<Table
					    				id="matchTable2"
					    				items="{
											path: 'remote>/match',
											filters: [
														{path: 'matchfini', operator: 'NE', value1: 'N'}
														],
											sorter: {
												path: 'remote>sortdate',
												descending: true,
												group: '.getGroup'
											},
											groupHeaderFactory: '.getGroupHeader'
										}"
										noDataText="Aucun match"
										headerText="Résultats"
					    				width="100%"
					    				hAlign="Center">
										<columns>
											<Column width="{remote>/flagsize}" hAlign="Left" vAlign="Center"/>
											<Column width="{remote>/teamsize}" hAlign="Right"/>
											<Column width="18%" hAlign="Center"/>
											<Column width="{remote>/teamsize}" hAlign="Left"/>
											<Column width="{remote>/flagsize}" hAlign="Left"/>
											<Column demandPopin="true" minScreenWidth="9999px"/>
										</columns>
										<items>
											<ColumnListItem selected="true" type="Active" press="openPopup">
												<cells>
													<Image src="./flag/{remote>flagA}" width="100%"/>
													<ObjectIdentifier id="equipeA2" title="{remote>txtequipeA}" text="Mon score" wrapping="false"/>
													<ObjectIdentifier
														id="scores2"
														title="{parts: [
													                {path: 'remote>encours' },
													                {path: 'remote>matchfini' },
													                {path: 'remote>scoreA' },
													                {path: 'remote>scoreB' },
													                {path: 'remote>heurematch' }
													            ],
													            formatter: '.heureOuScore'}"
														text="{remote>pronoA} - {remote>pronoB}"/>
													<ObjectIdentifier id="equipeB2" title="{remote>txtequipeB}" text="{remote>points}" />
													<Image src="./flag/{remote>flagB}" width="100%"/>
													<Text text="{remote>commentaire}" />
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</items>
							</VBox>
						</ScrollContainer>
						<ScrollContainer height="100%" width="100%"
							horizontal="false" vertical="true">
							<Table
			    				items="{
									path: 'remotegroupe>/equipes',
									filters: [
												{path: 'phase', operator: 'EQ', value1: 'A'}
												]
								}"
								noDataText="Aucun match"
								headerText="Classement Groupe A"
			    				width="100%"
			    				hAlign="Center">
								<columns>
									<Column width="{remotegroupe>/flagsize}" hAlign="Center"/>
									<Column width="10%" hAlign="Center" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet"/>
									<Column
									width="10%" hAlign="Center" vAlign="Middle" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline">
									<Text text="Pts"/>
									</Column>
									<Column width="5%" hAlign="Center" vAlign="Middle" visible="{remotegroupe>/isphone}"/>
									<Column
									width="10%" hAlign="Center" vAlign="Middle">
									<Text text="J"/>
									</Column>
									<Column
									width="10%" hAlign="Center" vAlign="Middle">
									<Text text="G"/>
									</Column>
									<Column
									width="10%" hAlign="Center" vAlign="Middle">
									<Text text="N"/>
									</Column>
									<Column
									width="10%" hAlign="Center" vAlign="Middle">
									<Text text="P"/>
									</Column>
									<Column
									width="10%" hAlign="Center" vAlign="Middle" visible="{remotegroupe>/nophone}">
									<Text text="p"/>
									</Column>
									<Column
									width="10%" hAlign="Center" vAlign="Middle" visible="{remotegroupe>/nophone}">
									<Text text="c"/>
									</Column>
									<Column
									width="10%" hAlign="Center" vAlign="Middle">
									<Text text="+/-"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem selected="true" type="Active" press="openPopup">
										<cells>
											<Image src="./flag/{remotegroupe>flag}" width="100%"/>
											<Text text="{remotegroupe>txtequipe}"  vAlign="Center"/>
											<Text text="{remotegroupe>Nbpoints}"/>
											<Text text=""/>
											<Text text="{remotegroupe>play}" />
											<Text text="{remotegroupe>win}" />
											<Text text="{remotegroupe>nul}" />
											<Text text="{remotegroupe>perdu}" />
											<Text text="{remotegroupe>buts}" />
											<Text text="{remotegroupe>encaisse}" />
											<Text text="{remotegroupe>dif}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</Carousel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>