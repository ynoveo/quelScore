<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="QuickStartApplication.controller.Pronostics">
	<App>
		<pages>
			<Page title="Mes pronostics" showNavButton="true" navButtonPress="onNavBack">
				<content>
        			<Table
        				id="matchTable"
        				inset="true"
        				items="{
							path: '/match',
							sorter: {
								path: 'matchdate',
								descending: false,
								group: true
							},
							groupHeaderFactory: '.getGroupHeader'
						}"
        				width="10em"
        				hAlign="Center">
						<columns>
							<Column width="1em" hAlign="Left"/>
							<Column width="10em" hAlign="Right"/>
							<Column width="3em" hAlign="Center"/>
							<Column width="10em" hAlign="Left"/>
							<Column width="1em" hAlign="Left"/>
							<Column width="3em" hAlign="Center"/>
						</columns>
						<items>
							<ColumnListItem selected="true" type="Active" press="onOpenPopover">
								<cells>
									<Image src="https://quelscore.com/flag/{flagA}"/>
									<ObjectIdentifier id="equipeA" title="{txtequipeA}" text="Score final"/>
									<ObjectIdentifier
										id="scores"
										itle="{pronoA} - {pronoB}"
										text="{parts: [
									                {path: 'encours' },
									                {path: 'matchfini' },
									                {path: 'scoreA' },
									                {path: 'scoreB' },
									                {path: 'heurematch' }
									            ],
									            formatter: '.heureOuScore'}"/>
									<ObjectIdentifier id="equipeB" title="{txtequipeB}" text=""/>
									<Image src="https://quelscore.com/flag/{flagB}"/>
									<ObjectStatus
										class="sapUiSmallMarginBottom"
							            icon="{parts: [
									                {path: 'encours' },
									                {path: 'matchfini' }
									            ], formatter: '.matchIcon'}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>