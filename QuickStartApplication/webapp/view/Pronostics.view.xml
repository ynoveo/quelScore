<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="QuickStartApplication.controller.Pronostics">
	<App>
		<pages>
			<Page
				id="idPage"
				title=""
				showNavButton="true"
				navButtonPress="onNavBack">
				<content>
					<VBox
						id="idVBox">
						<items>
		<!--				Filtre sur les pronostics -->
							<FacetFilter
								id="idFacetFilter"
								type="Light"
								showPersonalization="true"
								showReset="true"
								reset="handleFacetFilterReset"
								lists="{global>/Filters}">
								<lists>
									<FacetFilterList
										title="{global>type}"
										key="{global>key}"
										multiselect="true"
										listClose="handleListClose"
										items="{global>values}" >
										<items>
											<FacetFilterItem
												text="{global>data}"/>
										</items>
									</FacetFilterList>
								</lists>
							</FacetFilter>
							
		<!--				Tableau des pronostics -->
		        			<Table
		        				id="matchTable"
		        				items="{
									path: 'remote>/match',
									sorter: {
										path: 'remote>sortdate',
										descending: false,
										group: true
									},
									groupHeaderFactory: '.getGroupHeader'
								}"
								noDataText="Aucun match"
		        				width="100%"
		        				hAlign="Center">
								<columns>
									<Column width="9%" hAlign="Left" vAlign="Center"/>
									<Column width="32%" hAlign="Right"/>
									<Column width="18%" hAlign="Center"/>
									<Column width="32%" hAlign="Left"/>
									<Column width="9%" hAlign="Left"/>
									<!--<Column width="3em" hAlign="Center"/>-->
								</columns>
								<items>
									<ColumnListItem selected="true" type="Active" press="openPopup">
										<cells>
											<Image src="./flag/{remote>flagA}" width="{remote>/flagsize}"/>
											<ObjectIdentifier id="equipeA" title="{remote>txtequipeA}" text="Mon score" wrapping="false"/>
											<ObjectIdentifier
												id="scores"
												title="{parts: [
											                {path: 'remote>encours' },
											                {path: 'remote>matchfini' },
											                {path: 'remote>scoreA' },
											                {path: 'remote>scoreB' },
											                {path: 'remote>heurematch' }
											            ],
											            formatter: '.heureOuScore'}"
												text="{remote>pronoA} - {remote>pronoB}"/>
											<ObjectIdentifier id="equipeB" title="{remote>txtequipeB}" text="" />
											<Image src="./flag/{remote>flagB}" width="100%"/>
											<!--
											<ObjectStatus
												class="sapUiSmallMarginBottom"
									            icon="{parts: [
											                {path: 'encours' },
											                {path: 'matchfini' }
											            ], formatter: '.matchIcon'}"/>
											-->
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</items>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>