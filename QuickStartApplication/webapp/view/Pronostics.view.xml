<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="QuickStartApplication.controller.Pronostics">
	<App>
		<pages>
			<Page title="Mes pronostics" showNavButton="true" navButtonPress="onNavBack">
				<content>
        			<Table id="matchTable"
						inset="true"
						items="{
							path: '/match'
						}"
						width="10em"
						hAlign="Center">
						<columns>
							<Column
								width="7em"
								hAlign="Right">
							</Column>
							<Column
								width="3em"
								hAlign="Center">
							</Column>
							<Column
								width="10em"
								hAlign="Left">
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier
										title="{txtequipeA}"
										text="Score final"/>
									<ObjectIdentifier
										title="{pronoA} - {pronoB}"
										text="{scoreA} - {scoreB}"
										titleActive="true"
										titlePress="updateScore"/>
									<ObjectIdentifier
										title="{txtequipeB}"
										text=""/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>