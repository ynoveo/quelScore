				                <Button xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" text="Deconnexion" width="150px" id="__button0_logout" icon="sap-icon://disconnected" type="Reject" press="onLogout"/>
